<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/description_item_examlple"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/item_description"
                    app:layout_constraintStart_toEndOf="@+id/item_image" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/item_title" android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/barrier2"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:ellipsize="end"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="80dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/item_image"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/item_example_image"/>
            <TextView
                    android:text="@string/title_item_example"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_title" app:layout_constraintStart_toEndOf="@+id/item_image"
                    android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="@+id/barrier"
                    android:layout_marginEnd="8dp" android:maxLines="1" android:ellipsize="end"/>
            <android.support.constraint.Barrier
                    android:id="@+id/barrier2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="88dp"
                    app:layout_constraintStart_toStartOf="parent" app:constraint_referenced_ids="item_image"/>
            <TextView
                    android:text="@string/date_item_example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_date" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <android.support.constraint.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="left"
                    app:constraint_referenced_ids="item_date"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="384dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>